# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
APP_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tourpay

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Coinbase Configuration
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret
COINBASE_BASE_URL=https://api.coinbase.com/v2
COINBASE_ONRAMP_URL=https://pay.coinbase.com

# Blockchain Configuration (Base Network)
BASE_RPC_URL=https://mainnet.base.org
ESCROW_CONTRACT_ADDRESS=0x...
ESCROW_WALLET_PRIVATE_KEY=your-private-key-here
USDC_CONTRACT_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Apple Pay Configuration
APPLE_PAY_MERCHANT_ID=merchant.com.tourpay
APPLE_PAY_PASS_TYPE_ID=pass.com.tourpay.payment
APPLE_TEAM_ID=your-apple-team-id
APPLE_PAY_CERT_PATH=./certs/apple-pay-cert.pem
APPLE_PAY_KEY_PATH=./certs/apple-pay-key.pem

# Google Pay Configuration
GOOGLE_PAY_ISSUER_ID=your-google-pay-issuer-id
GOOGLE_PAY_CLASS_ID=your-google-pay-class-id
GOOGLE_PAY_PRIVATE_KEY=your-google-pay-private-key

# Security
RATE_LIMIT=100
DEFAULT_ZIP=00000

# Operator Payouts - Plaid (ACH Verification)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Operator Payouts - Stripe (ACH Transfers)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Operator Payouts - Circle (Alternative USDC)
CIRCLE_API_KEY=your-circle-api-key

# Escrow Wallet
ESCROW_WALLET_ID=your-coinbase-escrow-wallet-id

# Logging
LOG_LEVEL=info
